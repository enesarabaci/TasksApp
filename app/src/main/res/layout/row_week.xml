<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55.5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/row_week_hour"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:text="00:00"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/row_week_day_box_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <View
                    android:id="@+id/row_week_box_mark_1"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_week_day_box_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="end"
                android:orientation="horizontal">

                <View
                    android:id="@+id/row_week_box_mark_2"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_week_day_box_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <View
                    android:id="@+id/row_week_box_mark_3"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_week_day_box_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="end"
                android:orientation="horizontal">

                <View
                    android:id="@+id/row_week_box_mark_4"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_week_day_box_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <View
                    android:id="@+id/row_week_box_mark_5"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_week_day_box_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="end"
                android:orientation="horizontal">

                <View
                    android:id="@+id/row_week_box_mark_6"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_week_day_box_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <View
                    android:id="@+id/row_week_box_mark_7"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:background="@color/red" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>