                    android:id="@+id/fragment_week_day3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="12sp" />

